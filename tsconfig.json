{
	"compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
		"outDir": "./dist",
		"module": "CommonJS",
		"target": "es6",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"noEmitOnError": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"configuration/*": ["configuration/*"],
			"tests/*": ["tests/*"],
			"helpers/*": ["helpers/*"],
			"pages/*": ["pages/*"],
			"utils/*": ["utils*"],
			"lib/*": ["lib/*"],
			"step-definitions/*": ["step-definitions/*"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
