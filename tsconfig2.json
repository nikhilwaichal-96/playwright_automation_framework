{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "."
            ],
            "uiTestRoot/*": [
                "step-definitions/*",
                "lib/*"
            ]
        },
        "rootDirs": [
            "."
        ],
        "types": ["node", "webdriverio/async"]
    },
    "include": [
        "./**/*",
        "cucumber.js",
        "cucumber.report.js",
        "cucumber.node.js"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
        "entryPoints": ["./lib/page-objects/*.ts","./lib/helpers/*.ts"],
        "out": "docs",
        "skipErrorChecking":true,
    }
}